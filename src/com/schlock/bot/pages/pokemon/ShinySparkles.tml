<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Shiny Sparkles</title>
    <style>

        div.obs_window
        {
            width: 1280px;
            height: 720px;

            position: relative;
        }

        img.shiny
        {
            max-width: 200px;
            width: auto;
            height: auto;

            position: absolute;

            animation: rainbow_shiny 1s infinite linear;
        }

        img.upper_left
        {
            top: 0px;
            left: 0px;
        }

        img.upper_right
        {
            top: 0px;
            right: 0px;

            -moz-transform: scaleX(-1);
            -o-transform: scaleX(-1);
            -webkit-transform: scaleX(-1);
            transform: scaleX(-1);

            animation-delay: -0.25s;
        }

        img.lower_left
        {
            bottom: 0px;
            left: 0px;

            animation-delay: -0.50s;
        }

        img.lower_right
        {
            bottom: 0px;
            right: 0px;

            -moz-transform: scaleX(-1);
            -o-transform: scaleX(-1);
            -webkit-transform: scaleX(-1);
            transform: scaleX(-1);

            animation-delay: -0.75s;
        }

        @keyframes rainbow_shiny {
        /* green */   from, to { filter: invert(93%) sepia(15%) saturate(5705%) hue-rotate(24deg) brightness(106%) contrast(104%); }
        /* cyan */    07%      { filter: invert(92%) sepia(92%) saturate(2847%) hue-rotate(88deg) brightness(99%) contrast(105%); }
        /* blue */    14%      { filter: invert(19%) sepia(88%) saturate(2598%) hue-rotate(205deg) brightness(95%) contrast(102%); }
        /* purple */  21%      { filter: invert(13%) sepia(100%) saturate(5819%) hue-rotate(276deg) brightness(74%) contrast(116%); }
        /* magenta */ 28%      { filter: invert(15%) sepia(100%) saturate(2969%) hue-rotate(283deg) brightness(126%) contrast(138%); }
        /* pink */    35%      { filter: invert(25%) sepia(56%) saturate(2877%) hue-rotate(308deg) brightness(105%) contrast(102%); }
        /* orange */  42%      { filter: invert(73%) sepia(34%) saturate(4406%) hue-rotate(358deg) brightness(102%) contrast(107%); }
        /* yellow */  50%      { filter: invert(97%) sepia(75%) saturate(4752%) hue-rotate(332deg) brightness(110%) contrast(96%); }
        /* orange */  57%      { filter: invert(73%) sepia(34%) saturate(4406%) hue-rotate(358deg) brightness(102%) contrast(107%); }
        /* pink */    64%      { filter: invert(25%) sepia(56%) saturate(2877%) hue-rotate(308deg) brightness(105%) contrast(102%); }
        /* magenta */ 71%      { filter: invert(15%) sepia(100%) saturate(2969%) hue-rotate(283deg) brightness(126%) contrast(138%); }
        /* purple */  78%      { filter: invert(13%) sepia(100%) saturate(5819%) hue-rotate(276deg) brightness(74%) contrast(116%); }
        /* blue */    85%      { filter: invert(19%) sepia(88%) saturate(2598%) hue-rotate(205deg) brightness(95%) contrast(102%); }
        /* cyan */    92%      { filter: invert(92%) sepia(92%) saturate(2847%) hue-rotate(88deg) brightness(99%) contrast(105%); }
        }

    </style>
</head>
<body>

    <div class="obs_window">

        <img class="shiny upper_left" src="../img/shiny.png" />
        <img class="shiny upper_right" src="../img/shiny.png" />
        <img class="shiny lower_left" src="../img/shiny.png" />
        <img class="shiny lower_right" src="../img/shiny.png" />

    </div>


</body>
</html>